@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>
        <button class="btn btn-secondary" onclick="startGame()">Start Game</button>
    </p>
    <p>
        <form class="form-inline" onsubmit="{return false;}">
            <div class="form-group mb-2">
                <label for="staticEmail2" class="sr-only">Player</label>
                <input type="text" readonly class="form-control-plaintext" id="playerGuid" value="-">
            </div>
            <div class="form-group mx-sm-3 mb-2">
                <label for="inputPassword2" class="sr-only">Your guess</label>
                <input type="text" class="form-control" id="yourGuess" placeholder="?">
            </div>
            <button class="btn btn-primary mb-2" id="playButton" onclick="tryYourLuck()" disabled="true">Try your luck!</button>
        </form>
    </p>
</div>
